<script src="http://code.highcharts.com/modules/exporting.js"></script>
  <script>
$(function () {
    var chart;
    $(document).ready(function() {
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'container',
                type: 'areaspline'
            },
            title: {
                text: 'საშუალო გაყიდვები კვირის დღეების მიხედვით'
            },
            legend: {
                layout: 'vertical',
                align: 'left',
                verticalAlign: 'top',
                x: 150,
                y: 100,
                floating: true,
                borderWidth: 1,
                backgroundColor: '#FFFFFF'
            },
            xAxis: {
                categories: [
                    'ორშაბათი',
                    'სამშაბათი',
                    'ოთხშაბათი',
                    'ხუთშაბათი',
                    'პარასკევი',
                    'შაბათი',
                    'კვირა'
                ],
                plotBands: [{ // visualize the weekend
                    from: 4.5,
                    to: 6.5,
                    color: 'rgba(68, 170, 213, .2)'
                }]
            },
            yAxis: {
                title: {
                    text: 'ლარებში'
                }
            },
            tooltip: {
                formatter: function() {
                    return ''+
                    this.x +': '+ this.y +' ლარი';
                }
            },
            credits: {
                enabled: false
            },
            plotOptions: {
                areaspline: {
                    fillOpacity: 0.5
                }
            },
            series: [{
                name: 'საქართველოში',
                data: [30, 40, 30, 50, 40, 100, 120]
            }, {
                name: 'საზღვარგარეთ',
                data: [10, 30, 40, 30, 30, 50, 40]
            }]
        });
    });
    
});
</script>
