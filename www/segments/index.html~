<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>
<script>
$(function () {
    var chart;
    $(document).ready(function() {
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'container',
                type: 'bar'
            },
            title: {
                text: ''
            },
            xAxis: {
                categories: ['გამომცემელი', 'იზდაწელი', 'პაბლიშერი', 'ლოკესეა', 'პენდინგი']
            },
            yAxis: {
                min: 0,
                title: {
                    text: 'უკანასკნელი თვის გაყიდული რაოდენობებეი'
                }
            },
            legend: {
                backgroundColor: '#FFFFFF',
                reversed: true
            },
            tooltip: {
                formatter: function() {
                    return ''+
                        this.series.name +': '+ this.y +'';
                }
            },
            plotOptions: {
                series: {
                    stacking: 'normal'
                }
            },
                series: [{
                name: 'მაღალი',
                data: [parseInt(Math.random()*100)+1, parseInt(Math.random()*100)+1, parseInt(Math.random()*100)+1, parseInt(Math.random()*100)+1, parseInt(Math.random()*100)+1]
            }, {
                name: 'საშუალო',
                data: [parseInt(Math.random()*100)+1, parseInt(Math.random()*100)+1, parseInt(Math.random()*100)+1, parseInt(Math.random()*100)+1, parseInt(Math.random()*100)+1]
            }, {
                name: 'დაბალი',
                data: [parseInt(Math.random()*100)+1, parseInt(Math.random()*100)+1, parseInt(Math.random()*100)+1, parseInt(Math.random()*100)+1, parseInt(Math.random()*100)+1]
            }]
        });
    });
    
});

$(function () {
    var chart;
    $(document).ready(function() {
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'container2',
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false
            },
            title: {
                text: 'საფასო სეგმენტების გაყიდვის წილები'
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage}%</b>',
                percentageDecimals: 1
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        color: '#000000',
                        connectorColor: '#000000',
                        formatter: function() {
                            return '<b>'+ this.point.name +'</b>: '+ this.percentage +' %';
                        }
                    }
                }
            },
            series: [{
                type: 'pie',
                name: 'საფასო სეგმენტები',
                data: [
                    ['მაღალი',   45.0],
                    ['საშუალო-მაღალი',       26.8],
                    ['საშუალო',    8.5],
                    ['საშუალო-დაბალი',     6.2],
                    ['დაბალი',   0.7]
                ]
            }]
        });
    });
    
});
</script>	
